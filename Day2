#include <stdio.h>
int input1()
{
    int n;
    printf("Enter the value of n:");
    scanf("%d",&n);
    return n;
}
void input2(int a[],int n)
{
    int i;
    for(i=0;i<n;i++)
    {
        printf("Enter a number:");
        scanf("%d",&a[i]);
    }
}
void compute(int n,int a[],int *sum)
{
    int i;
    *sum=0;
    for(i=0;i<n;i++)
    {
        *sum=*sum+a[i];
    }
}
void result(int sum,int n,int a[])
{
    int i;
    for(i=0;i<n-1;i++)
    {
        printf("%d+",a[i]);
    }
    printf("%d",a[n-1]);
    printf("=%d",sum);
}
int main()
{
    int x,r;
    int a[50];
    x=input1();
    input2(a,x);
    compute(x,a,&r);
    result(r,x,a);
}



#include <stdio.h>
struct fr
{
    int num;
    int den;
};
struct fr input(struct fr *fr1)
{
    printf("Enter the numerator:\n");
    scanf("%d",&fr1->num);
    printf("Enter the denominator:\n");
    scanf("%d",&fr1->den);
}
struct fr compute(struct fr *fr1,struct fr *fr2,struct fr *r)
{
    r->num=fr1->den*fr2->num+fr1->num*fr2->den;
    r->den=fr1->den+fr2->den;
}
void output(struct fr r)
{
    printf("%d/%d",r.num,r.den);
}
int main()
{
    struct fr fr1,fr2,r;
    input(&fr1);
    input(&fr2);
    compute(&fr1,&fr2,&r);
    output(r);
}
